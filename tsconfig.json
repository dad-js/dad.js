{
	"compilerOptions": {
		"lib": ["es2021"],
		"target": "ES6",
		"module": "Node16",
		"strict": true,
		"esModuleInterop": true,
		"declaration": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./dist",
		"rootDir": "./src"
	},
	"exclude": ["node_modules", "dist"]
}
